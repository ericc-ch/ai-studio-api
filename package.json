{
  "name": "copilot-api",
  "version": "0.0.22",
  "description": "A wrapper around GitHub Copilot API to make it OpenAI compatible, making it usable for other tools.",
  "keywords": [
    "proxy",
    "github-copilot",
    "openai-compatible"
  ],
  "homepage": "https://github.com/ericc-ch/copilot-api",
  "bugs": "https://github.com/ericc-ch/copilot-api/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ericc-ch/copilot-api.git"
  },
  "author": "Erick Christian <erickchristian48@gmail.com>",
  "type": "module",
  "bin": {
    "copilot-api": "./dist/main.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch ./src/main.ts",
    "knip": "knip",
    "lint": "eslint .",
    "prepack": "bun run build",
    "prepare": "simple-git-hooks",
    "release": "bumpp && pnpm publish --access public",
    "start": "NODE_ENV=production tsx ./src/main.ts"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged"
  },
  "lint-staged": {
    "*": "bun run lint --fix"
  },
  "dependencies": {
    "citty": "^0.1.6",
    "consola": "^3.4.2",
    "fetch-event-stream": "^0.1.5",
    "hono": "^4.7.8",
    "jsdom": "^26.1.0",
    "playwright": "^1.52.0",
    "srvx": "^0.6.0",
    "tiny-invariant": "^1.3.3",
    "tinyexec": "^1.0.1",
    "tsx": "^4.19.4"
  },
  "devDependencies": {
    "@echristian/eslint-config": "^0.0.42",
    "@types/bun": "^1.2.12",
    "@types/jsdom": "^21.1.7",
    "bumpp": "^10.1.0",
    "eslint": "^9.26.0",
    "jiti": "^2.4.2",
    "knip": "^5.55.1",
    "lint-staged": "^15.5.2",
    "prettier-plugin-packagejson": "^2.5.11",
    "simple-git-hooks": "^2.13.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  }
}
